<%- include('../partials/header')%>
<div class="container mt-5 p-3">
    <ul>
        <li><a href="/education">Eduaction</a></li>
        <li><a href="/skill">Skill</a></li>
        <li><a href="/project">Project</a></li>
        <li><a href="/experience">Experience</a></li>
        <li><a href="/interest">Interest</a></li>
    </ul>
    <hr />
    <form action="/add-interest" class="skill mt-5 container" method="POST">
        <input type="text" placeholder="Enter Your Interest" name="interest" />
        <button>Add Interest</button>
    </form>
    <hr />
    <div class="d-flex flex-wrap">
        <% user.interest.forEach((e, i)=> { %>
        <div class="card me-3 mb-3" style="width: 18rem">
            <div class="card-body">
                <h5 class="card-title"><%= e.interest%></h5>
                <a href="/delete-interest/<%= i%>" class="card-link">Remove</a>
            </div>
        </div>
        <% })%>
    </div>

</div>

<%- include('../partials/footer')%>