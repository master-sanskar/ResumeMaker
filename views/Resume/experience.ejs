<%- include('../partials/header')%>
<div class="container mt-5 p-3">
    <ul>
        <li><a href="/education">Eduaction</a></li>
        <li><a href="/skill">Skill</a></li>
        <li><a href="/project">Project</a></li>
        <li><a href="/experience">Experience</a></li>
        <li><a href="/interest">Interest</a></li>
    </ul>
    <hr />
    <form action="/add-experience" class="project mt-5 container" method="POST">
        <input type="text" placeholder="Company Name" name="company" />
        <input type="text" placeholder="Designation" name="designation" />
        <input type="text" placeholder="Duration" name="duration" />
        <button>Add Experience</button>
    </form>
    <hr />
    <div class="d-flex flex-wrap">
        <% user.experience.forEach((e, i)=> { %>
        <div class="card me-3 mb-3" style="width: 18rem">
            <div class="card-body">
                <h5 class="card-title"><%= e.company%></h5>
                <h6 class="card-subtitle mb-2 text-muted">
                    <%= e.designation%> - <%= e.duration%>
                </h6>
                <a href="/delete-experience/<%= i%>" class="card-link">Remove</a>
            </div>
        </div>
        <% })%>
    </div>
</div>

<%- include('../partials/footer')%>